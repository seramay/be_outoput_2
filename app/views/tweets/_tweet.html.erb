<div class="content_post">
  <div class="more">
    <span><i class="far fa-hand-point-right"></i></span>
    <ul class="more_list">
      <li>
        <%= link_to '詳細', "/tweets/#{tweet.id}", method: :get %>
      </li>
      <% if user_signed_in? && current_user.id == tweet.user_id %>
        <li>
          <%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get, data: {"turbolinks" => false} %>
        </li>
        <li>
          <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
  <p><%= tweet.text.truncate(32) %></p>
  <span class="name">
    <a href="/users/<%= tweet.user.id %>">
      <span>投稿者 </span><%= tweet.user.nickname %><span> さんの投稿一覧</span>
    </a>
  </span>
</div>