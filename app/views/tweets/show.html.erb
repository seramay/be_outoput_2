<div class ="container">
  <div class="content_post-show">
    <% if user_signed_in? && current_user.id == @tweet.user_id %>
      <div class="more">
        <span><i class="far fa-hand-point-right"></i></span>
        <ul class="more_list">
          <li>
            <%= link_to '編集', "/tweets/#{@tweet.id}/edit", method: :get, data: {"turbolinks" => false} %>
          </li>
          <li>
            <%= link_to '削除', "/tweets/#{@tweet.id}", method: :delete %>
          </li>
        </ul>
      </div>
    <% end %>
    <div class="content-text"><%= markdown(@tweet.text).html_safe %></div>
    <span class="name">
      <a href="/users/<%= @tweet.user.id %>">
        <span>投稿者</span><%= @tweet.user.nickname %>
      </a>
    </span>
  </div>
  <%= @tweet.image %>
  <div class="comment-wrapper">
    <% if current_user %>
      <%= form_with(model: [@tweet, @comment], local: true, id: "new_comment") do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" , class: "textbox"%>
        <%= form.submit "SEND", class: "form__submit"%>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>
    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>